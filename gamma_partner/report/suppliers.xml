<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_suppliers">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><strong>Products of supplier - <span t-field="o.name"/></strong></h2>
                        <t t-set="count" t-value="0"/>
                        <t t-foreach="o.gamma_products" t-as="line">
                            <t t-set="count" t-value="count+1"/>
                            <t t-esc="count"/> - <span t-field="line.product_tmpl_id.name"/>
                            <br/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
